<h1>Forgot Password</h1>
<% if flash.any? %>
  <%= render "layouts/flash", flash: flash %>
<% end %>

<%= form_tag reset_passwords_path do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>
  <div class="actions">
    <%= submit_tag "Submit" %>
  </div>
<% end %>
