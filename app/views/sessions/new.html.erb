<h1>Sign In</h1>
<%= form_tag sessions_path do %>
  <% if flash.any? %>
    <%= render "layouts/flash", flash: flash %>
  <% end %>

  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Sign In" %>
  </div>
<% end %>
<div>
  <%= link_to "Sign Up", new_user_path %>
</div>
<div>
  <%= link_to "Forgot password?", new_reset_password_path %>
</div>
